<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nofluxgiven.science.eatr.SecondActivity">

    <TextView android:text="@string/hello_world"
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20pt"/>

    <ImageButton
        android:id="@+id/exit"
        android:src="@drawable/close"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/title" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:src="@drawable/like"
        android:id="@+id/like"
        android:layout_above="@+id/Rating"
        android:layout_alignEnd="@+id/Dinesafe" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:text="@string/hello_world"
        android:id="@+id/description"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/Rating"
        android:src="@drawable/fivestar"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50px"
        android:layout_height="30dp"
        android:src="@drawable/yelplogo"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Rating"
        android:layout_below="@+id/description" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/Dinesafe"
        android:src="@drawable/check"
        android:textSize="14pt"
        android:layout_alignTop="@+id/Rating"
        android:layout_alignEnd="@+id/description" />

</RelativeLayout>
